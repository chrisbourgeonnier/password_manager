<%= form_with model: password do |form| %>

  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <div>
        <%= message %>
      </div>
    <% end %>
  <% end %>

  <div>
    <%= form.label :url %>
    <%= form.url_field :url %>
  </div>

  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>

  <div class="mt-2">
    <span class="my-buttons hover:bg-gray-400"><%= form.submit %></span>
    <%= button_tag "❌ Delete", form: "delete_password", class: "border-solid border-2 border-gray-300 px-1 rounded-md hover:border-red-400" if @user_password.deletable? %>
  </div>
<% end %>

<%= form_with model: password, method: :delete, id: "delete_password", data: {turbo_confirm: "Are you sure?"} %>
